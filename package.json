{
    "name": "show-offset",
    "displayName": "show-offset",
    "description": "Show character or byte offset of cursor in the status bar",
    "version": "0.0.1",
    "publisher": "ramyaraoa",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Show Offset configuration",
            "properties": {
                "showoffset.offsetType": {
                    "type": "string",
                    "enum": [
                        "character",
                        "byte"
                    ],
                    "default": "character",
                    "description": "Shows either character or byte offset of the cursor in the status bar item."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}